<section id="zivotopis" class="px-4 md:pt-20 md:flex py-10">
    <div class="flex-1">
        <h2 class="text-gray-500 font-medium text-2xl mt-4">Životopis</h2>

        <figure class="md:hidden py-2">
            <img src="/assets/augustin-portret.jpg" alt="" />
            <figcaption class="text-center text-gray-500 mt-2">
                Foto Ivona Orešková
            </figcaption>
        </figure>

        <h3 class="text-gray-500">
            Martin Augustín sa narodil 25. 11. 1968 v Bratislave
        </h3>
        <h2 class="text-gray-500 font-medium text-xl mt-10">Štúdium</h2>
        {
            studium.map((item) => (
                <div class="item my-2">
                    <h3 class="text-gray-500 font-medium">{item.date}</h3>
                    <p class="text-gray-500 text-sm">{item.text}</p>
                </div>
            ))
        }

        <h2 class="text-gray-500 font-medium text-xl mt-10">Ocenenia</h2>
        {
            ocenenia.map((item) => (
                <div class="item my-2">
                    <h3 class="text-gray-500 font-medium">{item.date}</h3>
                    {item.text.map((textik) => (
                        <p class="text-gray-500 text-sm">{textik}</p>
                    ))}
                </div>
            ))
        }
    </div>
    <figure class="hidden md:flex-1 md:block md:px-5 pt-8">
        <img src="/assets/augustin-portret.jpg" alt="" />
        <figcaption class="text-center text-gray-500 mt-2">
