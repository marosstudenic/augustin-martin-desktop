<script>
  // Get the image and insert it inside the modal - use its "alt" text as a caption
  var imgs = document.getElementsByClassName("modalImg");

  for (let i = 0; i < imgs.length; i++) {
    imgs[i].onclick = (img) => {
      img = img.target;
      showModal(
        "/assets/gallery-1440/" + img.getAttribute("data-image"),
        img.alt
      );
    };
  }
</script>
